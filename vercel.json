{
    "version": 2,
    "builds": [
        {
            "src": "server.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.py"
        },
        {
            "src": "/(.*)",
            "dest": "/server.py"
        }
    ],
    "env": {
        "VERCEL": "true",
        "PYTHONUNBUFFERED": "1",
        "USE_REAL_SCRAPER": "true",
        "FORCE_REAL_SCRAPER": "true",
        "DEBUG_MODE": "true"
    },
    "functions": {
        "server.py": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
} 